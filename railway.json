{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "nixpacksPlan": {
            "providers": ["python", "node"],
            "phases": {
                "install": {
                    "dependsOn": ["setup"],
                    "cmds": ["npm ci --legacy-peer-deps"]
                }
            }
        }
    },
    "deploy": {
      "region": "us-west2",
      "runtime": "V2",
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-west2": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }